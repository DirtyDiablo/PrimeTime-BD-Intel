# N8N Environment Configuration
# Copy this file to .env and fill in your actual API keys

# N8N Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here

# Database Configuration
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n_user
DB_POSTGRESDB_PASSWORD=your_db_password_here

# External API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
SERPAPI_API_KEY=your_serpapi_key_here
LINKEDIN_API_KEY=your_linkedin_api_key_here
CLEARANCEJOBS_API_KEY=your_clearancejobs_api_key_here

# Web Scraping Services
APIFY_API_KEY=your_apify_api_key_here
SCRAPINGBEE_API_KEY=your_scrapingbee_api_key_here
BRIGHT_DATA_API_KEY=your_bright_data_api_key_here

# Database Services
POSTGRES_CONNECTION_STRING=postgresql://n8n_user:password@localhost:5432/n8n
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# File Storage
S3_ACCESS_KEY_ID=your_s3_access_key_here
S3_SECRET_ACCESS_KEY=your_s3_secret_key_here
S3_BUCKET=primetime-bd-intel
S3_REGION=us-east-1

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Development Settings
NODE_ENV=development
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
